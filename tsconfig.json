{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib",
        "importHelpers": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "lib": [
            "es2015",
            "dom"
        ],
        "paths": {
            "@secoya/tab-navigation.ts": [
                "./src"
            ]
        }
    },
    "exclude": [
        "**/__tests__/*",
        "dist",
        "lib",
        "lib2015",
        "libnext",
        "node_modules"
    ]
}