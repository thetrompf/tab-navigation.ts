{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "importHelpers": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "rootDir": "./src",
        "lib": ["dom", "es2015"],
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": [
        ".docz/**/*",
        "docs/**/*",
        "**/__tests__/*",
        "dist",
        "lib",
        "lib2015",
        "libnext",
        "node_modules",
        "hooks.d.ts",
        "index.d.ts"
    ]
}
